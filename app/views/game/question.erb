<div class="container">
  <h1>Deck 1</h1>
  <div id="answer_area">
    <% if @result %>
      <p>You good!</p>
    <% else %>
      <p></p>
    <% end %>

  </div>
  <span id="answer_result"></span>
  <p id="question_area"><%= @new_card.question %></p>
  <form action="/results/<%= @new_card.id %>" method="post">
    <input type="hidden" name="round_id" value="<%= @current_round %>" id="current_round">
    <input type="hidden" name="card_id" value="<%= @new_card.id %>" id="current_card">
    <input type="text" name="answer" placeholder="Answer" id="answer">
    <input class="btn" type="submit" name="Submit" id="answer_button">
  </form>
</div>
